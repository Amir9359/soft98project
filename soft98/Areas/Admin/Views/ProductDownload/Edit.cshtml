@model soft98.DataAccessLayer.Entities.ProductDownloadFile

@{
    ViewData["Title"] = "ویرایش فایل دانلود";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0" style="margin-top: 50px;">
    <h3 class="pull-right title-h">ویرایش فایل دانلود</h3>
    <h3 class="pull-left">
        <a asp-action="Index" class="btn-orange">بازگشت</a>
    </h3>
</div>
<div class="clearfix"></div>
<br />

<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0">
    <form asp-action="Edit" class="table-chart" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FileName" />

        <div class="form-group">
            <label asp-for="Productlink" class="control-label labelStyle"></label>
            <input asp-for="Productlink" class="form-control" style="margin-right: 10px; font-size: 17px;" />
            <span asp-validation-for="Productlink" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label   class="control-label labelStyle">نرم افزار</label>
            <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId" style="margin-right: 10px; font-size: 17px; ">
                <option disabled selected value="">لطفا فایل را در صورت تغییر انتخاب کنید .</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="File" class="control-label labelStyle"></label>
            <input asp-for="File" style="margin-right: 10px; font-size: 17px;padding: 4px 5px" />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Volume" class="control-label labelStyle"></label>
            <input asp-for="Volume" class="form-control" style="margin-right: 10px; font-size: 17px;" />
            <span asp-validation-for="Volume" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-bottom: 55px">
            <input type="submit" value="اعمال تغییرات" class="btn btn-orange" style="width: 20%;margin-right: 40%;" />
        </div>
    </form>
</div>
 

