@model IEnumerable<soft98.DataAccessLayer.Entities.Matlab>

@{
    ViewData["Title"] = "لیست مطالب";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0" style="margin-top: 50px;">
    <h3 class="pull-right title-h">نمایش مطالب</h3>
    <h3 class="pull-left">
        <a asp-action="Create" class="btn-orange">ایجاد مطلب </a>
    </h3>
</div>
<div class="clearfix"></div>
<br />

<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0" style="margin-right: -135px;">
    <table class="table table-chart-matlab">
        <thead>
            <tr>
                <th style="width: 20%" class="text-center">
                    @Html.DisplayNameFor(model => model.Title)
                </th>

                <th style="width: 10%" class="text-center">
                    @Html.DisplayNameFor(model => model.Show)
                </th>
                <th style="width: 10%" class="text-center">
                    @Html.DisplayNameFor(model => model.NumberSeen)
                </th>
                <th style="width: 7%" class="text-center">
                    @Html.DisplayNameFor(model => model.IsSoft)
                </th>
                <th style="width: 7%" class="text-center">
                    @Html.DisplayNameFor(model => model.IsMobile)
                </th>
                <th style="width: 7%" class="text-center">
                    @Html.DisplayNameFor(model => model.IsTech)
                </th>
                <th style="width: 15%" class="text-center">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 20%">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td style="width: 10%">
                        @Html.DisplayFor(modelItem => item.Show)
                    </td>
                    <td style="width: 10%">
                        @Html.DisplayFor(modelItem => item.NumberSeen)
                    </td>
                    <td style="width: 7%">
                        @Html.DisplayFor(modelItem => item.IsSoft)
                    </td>
                    <td style="width: 7%">
                        @Html.DisplayFor(modelItem => item.IsMobile)
                    </td>
                    <td style="width: 7%">
                        <input type="checkbox" checked="@item.IsTech" disabled="disabled"/>
                    </td>
                    <td style="width: 15%">
                        <a asp-action="Edite" asp-route-id="@item.Id" class="btn-xs btn-warning">ویرایش</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-xs btn-info">جزئیِات</a> |
                        <a href="#" onclick="DeleteM(@item.Id)" class="btn-xs btn-danger">حذف</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="bodymodal" class="modal-body">

            </div>
        </div>

    </div>
</div>

<script>
    function DeleteM(id) {
        $.ajax({
            url: "/Admin/Matlab/Delete/" + id,
            type: "Get",
            data: {}
        }).done(function (result) {
            $('#myModal').modal('show');
            $('#myModalHeader').html('');
            $('#bodymodal').html(result);
        });
    }
</script>