@model soft98.DataAccessLayer.Entities.Banner

@{
    ViewData["Title"] = "تغییر بنر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0" style="margin-top: 50px;">
    <h3 class="pull-right title-h">تغییر بنر</h3>
    <h3 class="pull-left">
        <a asp-action="Index" class="btn-orange">بازگشت</a>
    </h3>
</div>
<div class="clearfix"></div>
<br />

<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0">
    <form asp-action="Edit" class="table-chart">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="PlaceCode" class="control-label labelStyle"></label>
            <input asp-for="PlaceCode" class="form-control"  style="margin-right: 10px; font-size: 17px;" />
            <span asp-validation-for="PlaceCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label labelStyle"></label>
            <textarea asp-for="Description" class="form-control"  style="margin-right: 10px; font-size: 17px;"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label labelStyle"></label>
            <input asp-for="Price" class="form-control"  style="margin-right: 10px; font-size: 17px;" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-groupM">
            <div class="containerM" style="color: #dbd8d8">
                @Html.DisplayNameFor(model => model.IsActive)
                <input type="checkbox" asp-for="IsActive">
                <span class="checkmark"> </span><i class="fa fa-check check-btn"></i>
            </div>
        </div>
        <div class="form-group">
            <input type="submit"  value="اعمال تغییرات" class="btn btn-orange" style="width: 20%;margin-right: 40%;" />
        </div>
    </form>
</div>
 
