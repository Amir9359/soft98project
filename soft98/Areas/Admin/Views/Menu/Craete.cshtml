@model soft98.DataAccessLayer.Entities.Category

@{
    ViewData["Title"] = "ایجاد دسته";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0" style="margin-top: 50px;">
    <h3 class="pull-right title-h">ایجاد دسته ها</h3>
    <h3 class="pull-left">
        <a   asp-action="Index" class="btn-orange">بازگشت</a>
    </h3>
</div>
<div class="clearfix"></div>
<br />

<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0">
    <form asp-action="Craete"  class="table-chart" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label labelStyle"></label>
            <input asp-for="Name" class="form-control" style="margin-right: 10px; font-size: 17px;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ParentId" class="control-label labelStyle"></label>
            <select asp-for="ParentId" class="form-control" asp-items="ViewBag.cat" style="margin-right: 10px; font-size: 17px;">
                <option selected style=" font-size: 17px;"  value="">لطفا انتخاب کنید...</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="ایجاد" class="btn btn-orange" style="margin-right: 10px;" />
        </div>
    </form>
</div>
