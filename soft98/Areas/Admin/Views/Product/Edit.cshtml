@model soft98.DataAccessLayer.Entities.Product

@{
    ViewData["Title"] = "تغییر محصول";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0" style="margin-top: 50px;">
    <h3 class="pull-right title-h">تغییر محصول</h3>
    <h3 class="pull-left">
        <a asp-action="Index" class="btn-orange">بازگشت</a>
    </h3>
</div>
<div class="clearfix"></div>
<br />

<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0">
    <form asp-action="Edit" class="table-chart" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="PicName" />
        <div class="form-group">
            <label asp-for="Name" class="control-label labelStyle"></label>
            <input asp-for="Name" class="form-control"  style="margin-right: 10px; font-size: 17px;"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label labelStyle"></label>
            <textarea asp-for="Description" class="form-control"  style="margin-right: 10px; font-size: 17px;"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label labelStyle"></label>
            <select asp-for="CategoryId" class="form-control"  style="margin-right: 10px; font-size: 17px; " asp-items="ViewBag.CategoryId">
                <option disabled selected value="">لطفا دسته بندی را انتخاب کنید .</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PicFile" class="control-label labelStyle"></label>
            <input asp-for="PicFile" type="file"  style="margin-right: 10px; font-size: 17px;"/>
            <img src="~/Images/@Model.PicName" class="center-block" style=" margin-top: 10px;" height="200" width="200" />
            <span asp-validation-for="PicFile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="InstallDescription" class="control-label labelStyle"></label>
            <textarea asp-for="InstallDescription" class="form-control"  style="margin-right: 10px; font-size: 17px;"></textarea>
            <span asp-validation-for="InstallDescription" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-bottom: 55px">
            <input type="submit"  value="اعمال تغییرات" class="btn btn-orange" style="width: 20%;margin-right: 40%;" />
        </div>
    </form>
</div>


@section Scripts
{
    <script src="~/CKEditor/ckeditor/ckeditor.js"></script>
    <script src="~/CKEditor/ckeditor/adapters/jquery.js"></script>
    <script>
        $(function() {
            $('#InstallDescription').ckeditor();
        });
    </script>
}
