@model IEnumerable<soft98.DataAccessLayer.Entities.Product>

@{
    ViewData["Title"] = "نمایش محصولات";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0" style="margin-top: 50px;">
    <h3 class="pull-right title-h">نمایش  محصولات</h3>
    <h3 class="pull-left">
        <a asp-action="Create" class="btn-orange">ایجاد محصول </a>
    </h3>
</div>
<div class="clearfix"></div>
<br />

<div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12
     col-sm-offset-0 col-xs-12 col-xs-offset-0" style="margin-right: -135px;">
    <table class="table table-chart-menu">
        <thead>
            <tr>
                <th class="text-center" style="width: 20%">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-center" style="width: 20%">
                    @Html.DisplayNameFor(model => model.Category.Name)
                </th>
                <th class="text-center" style="width: 10%">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>    
                <th class="text-center" style="width: 20%">
                    @Html.DisplayNameFor(model => model.PicName)
                </th>

                <th class="text-center" style="width:5%">
                    @Html.DisplayNameFor(model => model.SeenCount)
                </th>

                <th class="text-center" style="width: 20%">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center" style="width: 20%">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-center" style="width: 20%">
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>

                    <td class="text-center" style="width: 10%" >
                        @Html.DisplayFor(modelItem => item.UpdateDate)
                    </td>
                    <td class="text-center" style="width: 20%">
                        <img src="/Images/@item.PicName" class="center-block" height="40" width="40" />
                    </td>

                    <td class="text-center" style="width: 5%">
                        @Html.DisplayFor(modelItem => item.SeenCount)
                    </td>

                    <td style="width: 20%">
                        <a asp-action="تغییر" asp-route-id="@item.Id" class="btn-xs btn-warning">تغییر</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-xs btn-info">Details</a> |
                        <a href="#" onclick="Delete(@item.Id)" class="btn-xs btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="bodymodal" class="modal-body">

            </div>
        </div>

    </div>
</div>

<script>
    function Delete(id) {
        $.ajax({
            url: "/Admin/Product/Delete/" + id ,
            type: "Get",
            data: {}
        }).done(function (result) {
            $('#myModal').modal('show');
            $('#myModalHeader').html('');
            $('#bodymodal').html(result);
        });
    }
</script>
