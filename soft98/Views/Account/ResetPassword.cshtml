@model  ResetViewModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    int? mystatus = ViewBag.mystatus;

    if (mystatus == 1)
    {
        <script>
            window.onload = function () {
                ShowLogin();
            };
        </script>
    }
}

<div class="mainpage">
    <div class="logo pull-right "><img src="~/Images/logo.png" /></div><br />
    <div class="register col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
        <div class="registerInner">
            <i class="pull-right fas fa-pause pause"></i><div class="textregister">تغییر کلمه عبور</div>
            <hr class="line" />

            <form asp-action="ResetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group registerStyle">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger" style="position: relative;display: block;"></span>
                </div>
                <div class="form-group registerStyle">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password"  class="form-control" />
                    <span asp-validation-for="Password" class="text-danger" style="position: relative;display: block;"></span>
                </div>
                <div class="form-group registerStyle">
                    <label asp-for="RePassword" class="control-label"></label>
                    <input asp-for="RePassword" type="password" class="form-control" />
                    <span asp-validation-for="RePassword" class="text-danger" style="position: relative;display: block;"></span>
                </div>
                <div class="form-group registerStyle ">
                    <input type="submit" value="تغییر کلمه عبور" class="btn btn-block btn-green " />
                </div>
            </form>
        </div>
    </div>

</div>

<script>
    function ShowLogin() {
        $.ajax({
            url: "/Account/Active/",
            type: "Get",
            data: {}
        }).done(function (result) {
            $('#myModal').modal('show');
            $('#myModalHeader').html('');
            $('#bodymodal').html(result);
        });
    }
</script>